<div class="jumbotron">
	<h1>Recipes</h1>
	<p>Click on a recipe to read it on food52, save it to read later, or add a comment.</p>
</div>
<div class="row">
	
		{{#each articles}}
			{{#if this.unsaved}}
			<div class="col-sm-6 col-md-3 col-lg-3 recipeBlock">
				<h2>{{this.title}}</h2>
			        <h3 class="summary">By: {{this.summary}}</h3>
			        <div class="more label"><a href="{{this.link}}" target="_blank" class="form-control" id="title">Read More</a></div> 
			        <div>
			            
			            <img class ="recipeImg" alt="{{this.title}}" src="{{this.image}}">
			            <div class="tags">
			                <span class="btn-info">
				                <form action="/saved/{{this.id}}" method="POST">
									<button type="submit" class="btn btn-default">Save Recipe</button>
								</form>
							</span>
							<span class="btn-info">
								<form action='/articles/{{this.id}}' method="GET">
									<button type="submit" class="btn btn-default">Comment</button>
								</form>
							</span>
			            </div>    
			        </div> 
			</div>  
			{{/if}}
		{{/each}}
	
</div>