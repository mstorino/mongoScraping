<div class="jumbotron">
	<h1>Saved Articles</h1>
	<p>Click on an article to read it, click mark read to remove from your Saved Articles, or add a comment.</p>
</div>

<div class="row">
	{{#each articles}}

<div class="col-sm-6 col-md-3 col-lg-3 recipeBlock">
				<h2>{{this.title}}</h2>
			        <h3 class="summary">By: {{this.summary}}</h3>
			        <div class="more label"><a href="{{this.link}}" target="_blank" class="form-control" id="title">Read More</a></div> 
			        <div>
			            
			            <img class ="recipeImg" alt="{{this.title}}" src="{{this.image}}">
			            <div class="tags text-center">
			                
							<span class="btn-info">		
								<form action="/unsaved/{{this.id}}" method="POST">
									<button type="submit" class="btn btn-default">Mark Read</button>
								</form>
							</span>
							<span class="btn-info">
								<form action='/articles/{{this.id}}' method="GET">
									<button type="submit" class="btn btn-default">Comment</button>
								</form>
							</span>
			            </div>    
			        </div> 
			</div>  



